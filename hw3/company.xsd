<?xml version="1.0" encoding="UTF-8" ?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

	<xs:element name="Company">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="Department" maxOccurs="unbounded" />   
                <xs:element ref="Division" minOccurs="0" maxOccurs="unbounded" />
                <xs:element ref="Employee" maxOccurs="unbounded" />
                <xs:element ref="WorksFor" maxOccurs="unbounded" />
			</xs:sequence>
		</xs:complexType>

		<!-- Primary key declarations -->
		<xs:key name="PKDepartments">
            <xs:selector xpath="Department/depId"/>
            <xs:field xpath="." />
        </xs:key>
		
		<xs:key name="PKDivisions">
            <xs:selector xpath="Division/divId"/>
            <xs:field xpath="." />
        </xs:key>
        
        <xs:key name="PKEmployees">
            <xs:selector xpath="Employee/empId"/>
            <xs:field xpath="." />
        </xs:key>

        <!-- Division foreign key declarations -->
        <xs:keyref name="FKDeptToDivision" refer="PKDepartments">
        	<xs:selector xpath="Division/houseDeptId" />
        	<xs:field xpath="." />
        </xs:keyref>
        
        <xs:keyref name="FKEmployeeToDivision" refer="PKEmployees">
            <xs:selector xpath="Division/managerEmpId"/>
            <xs:field xpath="." />
        </xs:keyref>

        <!-- WorksFor foreign key declarations -->
        <xs:keyref name="FKDivisisionToWorksFor" refer="PKDivisions">
            <xs:selector xpath="WorksFor/divId"/>
            <xs:field xpath="." />
        </xs:keyref>

        <xs:keyref name="FKEmployeeToWorksFor" refer="PKEmployees">
            <xs:selector xpath="WorksFor/empId"/>
            <xs:field xpath="." />
        </xs:keyref>
	</xs:element>
	

	<xs:simpleType name="deptIdType">
		<xs:restriction base="xs:string" />
		<xs:pattern value="[A-Z]{3}" />
	</xs:simpleType>

	<xs:simpleType name="percentType">
		<xs:restriction base="xs:positiveInteger" />
		<xs:minInclusive value="0"/>
    	<xs:maxInclusive value="100"/>
	</xs:simpleType>

	<xs:simpleType name="phoneNumberType">
		<xs:restriction base="xs:string" />
		<xs:pattern value="[1-9][0-9]{2}\-[0-9]{3}\-[0-9]{4}" />
	</xs:simpleType>


	<xs:element name="Employee" maxOccurs="unbounded">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="empId" type="xs:positiveInteger" use="required" />
				<xs:element name="empName" type="xs:string" />
				<xs:element name="empPhone" type="phoneNumberType" minOccurs="0" />
				<xs:element name="empOffice" type="xs:string" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>


	<xs:element name="Department" maxOccurs="unbounded">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="deptId" type="deptIdType" use="required" />
				<xs:element name="deptName" type="xs:string" />
				<xs:element name="deptAddr" type="xs:string"  />
			</xs:sequence>
		</xs:complexType>
	</xs:element>


	<xs:element name="Division" maxOccurs="unbounded">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="divId" type="xs:string" use="required" />
				<xs:element name="divName" type="xs:string" />
				<xs:element name="divPhone" type="phoneNumberType" />
				<xs:element name="houseDeptId" type="deptIdType" />
				<xs:element name="managerEmpId" type="xs:positiveInteger" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>


	<xs:element name="WorksFor" maxOccurs="unbounded">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="divId" type="xs:string" use="required" />
				<xs:element name="empId" type="xs:positiveInteger" use="required" />
				<xs:element name="percentTime" type="percentType" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>

</xs:schema>